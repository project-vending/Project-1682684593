python
import logging
import os

log_dir = "logs"
log_file = "app.log"

# Make the logs directory if it doesn't exist
if not os.path.exists(log_dir):
    os.mkdir(log_dir)

# Set up the logger
logging.basicConfig(filename=os.path.join(log_dir, log_file), level=logging.DEBUG)

# Log a sample message
logging.info("Hello, world!")
